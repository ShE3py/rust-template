[build]
rustflags = [
    # Written for rustc 1.73.0 (cc66ad468 2023-10-03)
    "-Wexplicit_outlives_requirements", "-Fffi_unwind_calls", "-Wlet_underscore_drop",
    "-Wmacro_use_extern_crate", "-Wmeta_variable_misuse", "-Fmissing_abi", "-Fmissing_debug_implementations",
    "-Fpointer_structural_match", "-Wsingle_use_lifetimes", "-Wtrivial_numeric_casts",
    "-Wunused_import_braces", "-Wunused_lifetimes", "-Wunused_tuple_struct_fields",

    # Restrictions
    "-Wclippy::alloc_instead_of_core", "-Wclippy::assertions_on_result_states",
    "-Fclippy::clone_on_ref_ptr", "-Wclippy::decimal_literal_representation", "-Wclippy::else_if_without_else",
    "-Wclippy::empty_drop", "-Fclippy::empty_structs_with_brackets", "-Fclippy::exit", "-Wclippy::filetype_is_file",
    "-Wclippy::float_cmp_const", "-Wclippy::fn_to_numeric_cast_any", "-Wclippy::format_push_string", "-Wclippy::get_unwrap",
    "-Wclippy::map_err_ignore", "-Wclippy::missing_assert_message",
    "-Wclippy::missing_enforced_import_renames", "-Fclippy::mixed_read_write_in_expression",
    "-Wclippy::multiple_inherent_impl", "-Wclippy::mutex_atomic", "-Wclippy::pub_without_shorthand", "-Wclippy::rc_buffer",
    "-Wclippy::rc_mutex", "-Wclippy::redundant_type_annotations", "-Wclippy::rest_pat_in_fully_bound_structs",
    "-Fclippy::self_named_module_files", "-Fclippy::semicolon_outside_block", "-Fclippy::str_to_string",
    "-Fclippy::string_add", "-Fclippy::string_to_string", "-Wclippy::todo", "-Fclippy::try_err",
    "-Fclippy::undocumented_unsafe_blocks", "-Wclippy::unimplemented", "-Wclippy::unnecessary_safety_comment",
    "-Dclippy::unnecessary_safety_doc", "-Wclippy::unnecessary_self_imports", "-Wclippy::unneeded_field_pattern",
    "-Fclippy::unseparated_literal_suffix", "-Wclippy::verbose_file_reads",

    # Pedantic
    "-Wclippy::bool_to_int_with_if", "-Fclippy::borrow_as_ptr", "-Wclippy::case_sensitive_file_extension_comparisons",
    "-Wclippy::checked_conversions", "-Wclippy::cloned_instead_of_copied", "-Dclippy::copy_iterator",
    "-Fclippy::default_trait_access", "-Wclippy::doc_link_with_quotes", "-Wclippy::doc_markdown",
    "-Dclippy::expl_impl_clone_on_copy", "-Wclippy::explicit_into_iter_loop", "-Wclippy::explicit_iter_loop",
    "-Wclippy::filter_map_next", "-Wclippy::flat_map_option", "-Wclippy::float_cmp", "-Fclippy::implicit_clone",
    "-Wclippy::implicit_hasher", "-Wclippy::inconsistent_struct_constructor", "-Wclippy::index_refutable_slice",
    "-Wclippy::inefficient_to_string", "-Wclippy::invalid_upcast_comparisons", "-Dclippy::iter_not_returning_iterator",
    "-Wclippy::manual_instant_elapsed", "-Wclippy::manual_let_else", "-Wclippy::manual_ok_or", "-Fclippy::manual_string_new",
    "-Wclippy::map_unwrap_or", "-Wclippy::match_wild_err_arm", "-Wclippy::mismatching_type_param_order",
    "-Wclippy::missing_panics_doc", "-Wclippy::mut_mut", "-Wclippy::naive_bytecount", "-Wclippy::needless_bitwise_bool",
    "-Wclippy::needless_continue", "-Wclippy::needless_for_each", "-Wclippy::needless_pass_by_value",
    "-Wclippy::no_effect_underscore_binding", "-Fclippy::no_mangle_with_rust_abi", "-Wclippy::option_option",
    "-Wclippy::ptr_as_ptr", "-Wclippy::ptr_cast_constness", "-Wclippy::range_minus_one", "-Wclippy::range_plus_one",
    "-Wclippy::redundant_closure_for_method_calls", "-Wclippy::ref_option_ref", "-Wclippy::same_functions_in_if_condition",
    "-Wclippy::semicolon_if_nothing_returned", "-Wclippy::stable_sort_primitive", "-Fclippy::string_add_assign",
    "-Dclippy::transmute_ptr_to_ptr", "-Wclippy::trivially_copy_pass_by_ref", "-Fclippy::unicode_not_nfc",
    "-Wclippy::uninlined_format_args", "-Wclippy::unnecessary_box_returns", "-Wclippy::unnecessary_join",
    "-Wclippy::unnested_or_patterns", "-Dclippy::unsafe_derive_deserialize", "-Wclippy::unused_async",
    "-Wclippy::unused_self", "-Fclippy::used_underscore_binding", "-Wclippy::zero_sized_map_values",

    # Cargo
    "-Fclippy::negative_feature_names", "-Fclippy::redundant_feature_names", "-Fclippy::wildcard_dependencies"
]
